html
  head
    title= "RSVP Form"
    meta(
        name="viewport" 
        content="width=device-width, initial-scale=1"
    )
    link(
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css"
    )
  body(
      class="container is-fluid"
  )
    h1(
        class="title is-3"
    )= 'Thank you for your response!'
    if(isGoing)
        h1(
            class="title is-4"
        )= `${name}, you have been added to the guest list.`
    a(
        href="/guests"
    )= 'Guest List'
